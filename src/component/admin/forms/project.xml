<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field
        name="name"
        type="text"
        label="COM_SPM_PROJECT_NAME"
        required="true"
        />
    <field
        name="alias"
        type="text"
        label="COM_SPM_PROJECT_ALIAS"
        required="false"
        />
    <field
        type="accessiblemedia"
        directory="projects"
        label="COM_PROJECT_LOGO"
        />
    <field
        name="description"
        type="editor"
        buttons="image"
        hide="readmore, pagebreak"
        editor="tinymce|none"
        label="COM_SPM_PROJECT_DESCRIPTION"
        required="false"
        />
    <field
        name="deadline"
        type="text"
        label="COM_SPM_PROJECT_DEADLINE"
        required="false"
        />
    <field
        name="attachments"
        type="subform"
        label="COM_SPM_PROJECT_ATTACHMENTS"
        multiple="true"
        layout="joomla.form.field.subform.repeatable"
		formsource="administrator/components/com_spm/forms/attachment.xml"
        />
</form>
